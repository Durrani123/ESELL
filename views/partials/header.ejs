        <link rel="stylesheet" href="css/cart.css">
        <link rel="stylesheet" href="css/profileNavbar.css">
        <title>ESELL</title>
</head>
<body>


  <!-- cart -->
  <div id="mainCart" class="cartVisibility">
        <div class="leftCart">
        </div>
        <div class="rightCart">
          <div class="cartHeading">
            <div class="cartHeadingLeft">
              Your Cart
            </div>
            <div class="cartHeadingRight" id="cartGoBack">
              <i class="fa-solid fa-x"></i>
            </div>
          </div>
          <% if(isLoggedIn && cart.length >0){ %>
          <% cart.forEach(function(item) { %>
            <div class="cartContent">
              <div class="cartContentImg">
                <img src="<%= item.imageUrl %>" alt="">
                <div class="cartContentImgDesc">
                  <div class="cartContentImgDescHeading">
                    <%= item.title %>
                  </div>
                  <div class="cartContentImgDescHeadingDesc">
                    <%= item.truncatedText %>
                  </div>
                </div>
              </div>
              <div class="cartContentRemove">
                <div class="item ">
                  <div class="removeIconTrash">
                  <i class="fa-solid fa-trash-can"></i>
                </div>
                </div>
                <div class="item">
                  PKR&nbsp;<span style="font-family:'value Regular';"><p>  </p> <%= item.price %></span>
                </div>
              </div>
            </div>
          <% }); %>
          <hr>
          <div class="cartTotal">
            <div>
              Subtotal
            </div>
            <div>
              PKR <span style="font-family:'value Regular';"><%= totalPrice %></span>
            </div>
          </div>
          <hr>
          <div class="cartButton">
            <a href="/order"><button class="btn btn-secondary custom-btn">Check Out Now</button></a>
          </div>
          <% } %>
        </div>
  </div>

  <!-- Profile -->
  <div id="mainProfile" class="cartVisibility">
    <div class="leftCart">
    </div>
    <div class="rightCart">
      <div class="profileHeading">
        <div class="profileHeadingLeft">
          Profile
        </div>
        <div class="profileHeadingRight" id="profileGoBack">
          <i class="fa-solid fa-x"></i>
        </div>
      </div>
      
    <div class="DetailsProfile">
      <div class="profileItem">
        <div class="profileItemLeft">
          Username: 
        </div>
        <div class="profileItemright">
          <%=user.userName%>
        </div>
      </div>
      <div class="profileItem">
        <div class="profileItemLeft">
          NAME: 
        </div>
        <div class="profileItemright">
          <%=user.name%> 
        </div>
      </div>
      <div class="profileItem">
        <div class="profileItemLeft">
          PRODUCTS BOUGHT: 
        </div>
        <div class="profileItemright">
          <%=user.productsBought%> 
        </div>
      </div>
      <div class="profileItem">
        <div class="profileItemLeft">
          PRODUCTS SOLD: 
        </div>
        <div class="profileItemright">
          <%=user.productsSold%> 
        </div>
      </div>
      <a class="anchortoMain" href="/profile">view more details..</a>
      <div class="divItem">
        <a href="/logout"><button class="btn btn-secondary customs-btn">LOG OUT</button></a>
      </div>
    </div>
    </div>
</div>  


       <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand  zoom" href="/">ESELL</a>
        <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container searchBox">
          <div class="d-flex">
            <div class="searchbar">
              <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
              <input class="search_input" type="text" name="" placeholder="What are you looking for ?">
            </div>
          </div>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if(!isLoggedIn){ %>
            <li class="nav-item zoom">
              <a class="nav-link" href="/signup">signup</a>
            </li>
            <li class="nav-item" zoom>
              <a class="nav-link" href="/login">login</a>
            </li>
            <% } %>
            <% if(isLoggedIn){ %>
              <li class="nav-item logoutIcon zoom">
                <a class="nav-link" id="profileLink" href="#"><i class="fa fa-user" aria-hidden="true"></i></a>
              </li>
            <% } %>
            <li class="nav-item zoom">
              <a class="nav-link" id="cartLink" href="#">cart</a>
            </li>
            <li class="nav-item zoom">
              <a class="nav-link" href="/initialCategorypage">categories</a>
            </li>
            <li class="nav-item zoom">
              <a class="nav-link" href="/sellPageInitial">sell</a>
            </li>
          </ul>
        </div>
        <script src="profileNavbar.js"></script>
  </nav>